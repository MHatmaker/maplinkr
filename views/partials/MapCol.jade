
#idLinkrButtonRow(class="row", style="margin-left: 1rem;")
    div
        button(type="button", class="btn btn-labeled btn-primary",
            ng-click="$parent.onExpandMapClicked()")
            span(class="btn-label")
                | {{$parent.data.shrinkgrowtext}}
                i(class="fa fa-expand fa-lg", ng-class="{'fa-expand': $parent.data.subsiteExpanded, \
                'fa-compress': !$parent.data.subsiteExpanded}", style="padding-left: 0.5rem")

        button(type"button", class="btn btn-labeled btn-primary",
            ng-click="onMapLinkrClicked()")
            span(class="btn-label")
                | {{mldata.mapLinkrBtnText}}
                i(class="fa fa-expand fa-lg", ng-class="{'fa-expand': !mldata.isOpen, \
                'fa-compress': mldata.isOpen}", style="padding-left: 0.5rem")

#idMapContainerRow(class="row", style="margin-left: -0.5rem; margin-right: -0.5rem;")
    #map_wrapper(ng-controller="MapCtrl", class="{{$parent.data.mapColDef}}",
        style="vertical-align:top; position: absolute; width: 100%; height: 100%; {{$parent.data.mapColPad}}")


        #DestWndDialogGoogle
        #DestWndDialogArcGIS
        #PusherChannelDialog(ng-controller = "StompSetupCtrl")
        #map_canvas(style="margin:0px; width: 100%; height: 100%;")

        img#loadingImg(src="../stylesheets/images/loading.gif",
            style="position:absolute; right:512px; top:256px; z-index:100;")

        #hiddenmap_canvas(style="margin:0px; width: 100%; height: 100%; display: none;")
